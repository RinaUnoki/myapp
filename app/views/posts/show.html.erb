<h3>スケジュール確認</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @post.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @post.start %></td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td><%= @post.created_at.to_s(:datetime_jp) %></td>
      </tr>
       <tr>
        <th>終日</th>
     <td><% if @post.allday == true %>○<% else %><% end %></td>
      </tr>
      <tr>
        <th>メモ</th>
        <td><%= @post.memo %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "スケジュール情報一覧に戻る", :posts %></li>
      </ul>
    </div>